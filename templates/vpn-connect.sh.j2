#!/bin/sh
# Managed by ansible

export PATH=$PATH:/usr/sbin

while true
do
  ip a | grep -E 'inet.+ppp'

  if [ "$?" -eq 1 ]; then
    echo "c L2TP1" > /var/run/xl2tpd/l2tp-control
    sleep 5
    ip=$(ip a | grep -oP '(?<=peer ).+(?=\/32)')
    num=$(ip a | grep -oP '(?<=global ppp)[0-9](?=)')
    ip route add {{ vpn_local_cidr }} via ${ip} dev ppp${num}
    echo "ip route add {{ vpn_local_cidr }} via ${ip} dev ppp${num}"
  fi

  sleep 35
done
